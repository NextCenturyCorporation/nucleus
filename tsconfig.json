{
  "exclude": [
      "demos",
      "dist",
      "node_modules",
      "**/*.spec.ts"
  ],
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "declaration": true,
      "lib": [
          "es2017",
          "dom"
      ],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
  }
}
